# =====================================================
# DATABASE CONFIGURATION
# DB_TYPE: mysql | postgres
# =====================================================
DB_TYPE=mysql
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DB_PORT=3306
DB_SSL=false

# For PostgreSQL with connection string (optional):
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Use Prisma for CRUD operations (set to 'true' to enable)
USE_PRISMA=true

PORT=3000

# =====================================================
# WEATHER API
# Get your API key from: https://openweathermap.org/api
# =====================================================
OPENWEATHER=your_openweather_api_key

# =====================================================
# GOOGLE RECAPTCHA
# Get your keys from: https://www.google.com/recaptcha/admin
# =====================================================
SITEKEYRECAPTCHA=your_recaptcha_site_key
SECRETKEYRECAPTCHA=your_recaptcha_secret_key
ENABLE_CAPTCHA=0

# =====================================================
# TELEGRAM BOT
# Get your bot token from: https://t.me/BotFather
# =====================================================
TELEGRAM_BOT=your_telegram_bot_token
TELEGRAM_CHANNEL=your_telegram_channel_id

# =====================================================
# APPLICATION SETTINGS
# =====================================================
NODE_ENV=dev
JWT_SECRET=your_jwt_secret_min_32_characters

# =====================================================
# GOOGLE SERVICE ACCOUNT (for Google Sheets/Drive API)
# Download from: Google Cloud Console > IAM & Admin > Service Accounts
# =====================================================
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# =====================================================
# AI APIs
# =====================================================
GEMINI_API_KEY=your_gemini_api_key

# =====================================================
# PINECONE (Vector Database)
# Get your keys from: https://www.pinecone.io/
# =====================================================
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=your_index_name

# =====================================================
# OTHER SETTINGS
# =====================================================
ASSET_VERSION=1.0.0.10
API_KEY=your_api_key

# =====================================================
# OCR API CONFIGURATION
# =====================================================
OCR_API_URL=https://apio-v1.onrender.com/api/ocr/process
OCR_API_KEY=your_ocr_api_key
