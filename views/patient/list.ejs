                                                <% } %>
                                                <% if(path !== 'viem-gan-mt1'){ %>
                                                    <th>Chẩn đoán</th>
                                                <% } %>
                                                <% if(path == 'viem-gan-mt1'){ %>
                                                    <th>Điều tra viên</th>
                                                    <th>Ngày điều tra</th>
                                                <% } %>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            <%- include('../layout/footer') %>
        </div>
    </div>
    <script type="text/javascript">
        let path = "<%=path%>";
        var dataTable;
        
        // Mapping số ngày nhập viện với màu sắc
        // Chỉ hiển thị icon khi > 3 ngày
        // const dayColorMapping = [
        //     { minDays: 3, maxDays: 5, color: '#28a745', label: '3-5 ngày' },      // Xanh lá
        //     { minDays: 6, maxDays: 7, color: '#17a2b8', label: '6-7 ngày' },      // Xanh dương
        //     { minDays: 8, maxDays: 10, color: '#ffc107', label: '8-10 ngày' },    // Vàng
        //     { minDays: 11, maxDays: 13, color: '#fd7e14', label: '11-13 ngày' },  // Cam
        //     { minDays: 14, maxDays: Infinity, color: '#dc3545', label: '14+ ngày', critical: true } // Đỏ + hiệu ứng
        // ];
        
        const dayColorMapping = [
            { minDays: 4, maxDays: 7, color: '#28a745', label: '4-7 ngày' },           // Xanh lá
            { minDays: 8, maxDays: 14, color: '#ffc107', label: '2 tuần' },          // Vàng
            { minDays: 15, maxDays: 21, color: '#fd7e14', label: '3 tuần', critical: true },         // Cam
            { minDays: 22, maxDays: 28, color: '#ff6b6b', label: '4 tuần',critical: true },         // Đỏ nhạt
            { minDays: 29, maxDays: 35, color: '#ee5a52', label: '5 tuần',critical: true },         // Đỏ vừa
            { minDays: 36, maxDays: 42, color: '#dc3545', label: '6 tuần',critical: true },         // Đỏ đậm
            { minDays: 43, maxDays: Infinity, color: '#c82333', label: '7+ tuần', critical: true } // Đỏ rất đậm + hiệu ứng
        ];
        // Hàm tính số ngày từ ngày nhập viện đến hiện tại
        function getDaysSinceAdmission(admissionDate) {
            if (!admissionDate) return 0;
            const admission = moment(admissionDate);
            const today = moment();
            return today.diff(admission, 'days');
        }
        
        // Hàm lấy thông tin màu sắc dựa trên số ngày
        function getDayIndicator(days) {
            for (const mapping of dayColorMapping) {
                if (days > mapping.minDays && (days <= mapping.maxDays || mapping.maxDays === Infinity)) {
                    return mapping;
                }
            }
            return null;
        }
        
        // Hàm tạo HTML cho icon indicator
        function createDayIndicatorHtml(admissionDate, active) {
            console.log("createDayIndicatorHtml", admissionDate, active);
            
            // Không hiển thị nếu đã ra viện
            if (active == 2) return '';
            
            const days = getDaysSinceAdmission(admissionDate);
            console.log("days", days);
            
            if (days <= 3) return ''; // Không hiển thị nếu <= 3 ngày
            
            const indicator = getDayIndicator(days);
            if (!indicator) return '';
            
            const criticalClass = indicator.critical ? ' critical' : '';
            return `<span class="day-indicator${criticalClass}" 
                          style="background-color: ${indicator.color}; color: ${indicator.color};" 
                          title="${indicator.label} (${days} ngày)"></span>`;
        }
        
        $(document).ready(function () {
            dataTable = $('#dataTable').DataTable({
                serverSide: true,
                processing: true,
                responsive: true,
                paging: true,
                pageLength: 25,
                lengthMenu: [25, 50, 75, 100],
                ajax: {
                    url: '/patient/list',
                    method: 'POST',
                    dataType: "json",
                    beforeSend: function() {
                        loading.show();
                    },
                    complete: function() {  // Thêm complete để ẩn loading khi xong
                        loading.hide();
                    },
                    dataSrc: function(response){
                        if (response.data) {
                            return response.data;  // Trả về mảng dữ liệu
                        } else {
                            return [];  // Trả về mảng rỗng nếu không có dữ liệu
                        }
                    },
                    data: function(n){
                        if (!n) {
                            n = {};
                        }
                        n['path'] = path;
                    }
                },
                scrollX: true,
                rowId: function(row) {
                    return 'patient-' + row.id; // Thêm "row-" vào trước giá trị id
                },
                columns: [
                    {
                        data: null,
                        orderable: false, // Không cho phép sort cột actions
                        searchable: false, // Không search trong cột actions
                        render: function (data, type, row) {
                            return `
                                <div class="d-flex gap-2">
                                    <a class="btn btn-info btn-sm btn-circle" data-id="${row.id}" href="/patient/edit/<%=path%>/${row.id}" title="Sửa"><i class="fas fa-pen-square"></i></a>
                                    <button class="btn btn-danger btn-sm btn-circle" data-id="${row.id}" onclick="deletePatient(${row.id}, '${row.fullname}')" title="Xóa"><i class="fas fa-trash"></i></button>
                                </div>
                            `;
                        },
                    },
                    {   data: 'fullname',
                        orderable: true, // Cho phép sort
                        searchable: true, // Cho phép search
                        render: function(data, type, row) {
                            console.log("ten", data, type, row);
                            let classAttr = '';
                            let styleAttr = '';
                            if (row.active == 2) {
                                classAttr = 'class="text-danger"';
                            } else if (row.khan_cap == 1) {
                                classAttr = 'class="text-success"';
                            }
                            if(row.bien_ban == 1) styleAttr = 'style="background-color: #faebd7;"';
                            
                            // Thêm icon indicator cho ngày nhập viện (chỉ cho path hoi-chan)
                            let dayIndicator = '';
                            <% if(path == 'hoi-chan'){ %>
                                dayIndicator = createDayIndicatorHtml(row.ngay_nhap_vien, row.active);
                            <% } %>
                            
                            return `<a ${classAttr} ${styleAttr} href='/patient/detail/<%=path%>/${row.id}'>${data}</a> &nbsp; ${dayIndicator}`;
                        },
                        className: 'min-width-110'
                    },
                    {
                        type: 'html',
                        data: 'phone',
                        orderable: true, // Cho phép sort
                        searchable: true, // Cho phép search
                        render: function(data, type, row) {
                            let classAttr = '';
                            if (row.active == 2) {
                                classAttr = 'class="text-danger"';
                            } else if (row.khan_cap == 1) {
                                classAttr = 'class="text-success"';
                            }

                            if(row.bien_ban == 1) styleAttr = 'style="background-color: #faebd7;"';
                            return `<a ${classAttr} href="tel:${data}">${data}</a>`; // Định dạng ngày giờ
                        }
                    },
                    {
                        data: 'phong_dieu_tri',
                        className: 'min-width-100',
                        orderable: true, // Cho phép sort
                        searchable: true // Cho phép search
                    },
                    <% if(path == 'hoi-chan'){ %>
                        {
                            data: 'ngay_hoi_chan', // Cột ngày tháng
                            orderable: true, // Cho phép sort
                            searchable: false, // Không search cho ngày
                            render: function(data, type, row) {
                                // Kiểm tra nếu có Moment.js
                                return data ? moment(data).format('D/M/YYYY') : ''; // Định dạng ngày giờ
                            }
                        },
                    <% } %>
                    <% if(path !== 'viem-gan-mt1'){ %>
                        {
                            data: 'chuan_doan',
                            className: 'min-width-200',
                            orderable: true, // Cho phép sort
                            searchable: true // Cho phép search
                        },
                    <% } %>
                    <% if(path == 'viem-gan-mt1'){ %>
                        {
                            data: 'dieu_tra_vien',
                            className: 'min-width-200',
                            orderable: true, // Cho phép sort
                            searchable: true // Cho phép search
                        },
                        {
                            data: 'ngay_dieu_tra', // Cột ngày tháng
                            render: function(data, type, row) {
                                // Kiểm tra nếu có Moment.js
                                return moment(data).format('D/M/YYYY HH:mm'); // Định dạng ngày giờ
                            }
                        }
                    <% } %>
                    // {
                    //     data: 'ngay_nhap_vien', // Cột ngày tháng
                    //     render: function(data, type, row) {
                    //         // Kiểm tra nếu có Moment.js
                    //         return moment(data).format('D/M/YYYY'); // Định dạng ngày giờ
                    //     }
                    // },
                    // { data: 'phong_dieu_tri' },
                    
                ],
                // Cấu hình order mặc định DESC - ưu tiên khẩn cấp
                order: [], // Để trống để server xử lý order
                // Cấu hình searching
                searching: true, // Bật tính năng search
                // Cấu hình ordering
                ordering: true, // Bật tính năng sort
                rowCallback: function(row, data) {
                    // Thêm thuộc tính onclick hoặc liên kết cho toàn bộ hàng
                    // $(row).attr('onclick', `window.location.href='/patient/edit/<%=path%>/${row.id}'`);
                    // $(row).addClass('cursor-poiter')
                },
                layout:{
                    topStart: 'paging',
                    topEnd: 'search',
                    bottomStart: ['paging', 'info'],
                    bottomEnd:  'pageLength'
                }
            });
        });

        function deletePatient(id, name){
            confirmDialog('Xác nhận', 'Bạn có muốn xóa bệnh nhân ' + name).then(responseData =>{
                if(responseData.isConfirmed && id){
                    $.ajax({
                        type: 'POST',
                        url: '/patient/active',
                        data: {id: id, path: path, active: 0},
                        beforeSend: function () {
                            loading.show();
                        },
                        success: function (result) {
                            loading.hide();
                            if (result.success) {
                                toarstMessage('Xóa bệnh nhân thành công');
                                document.getElementById('patient-' + id).remove();
                            } else {
                                toarstError(result.message);
                            }
                        },
                        error: function (jqXHR, exception) {
                            loading.hide();
                            ajax_call_error(jqXHR, exception);
                        }
                    });
                }
            })
        }
    </script>
</body>
</html>