  "shortcuts": [
    {
      "name": "Create Survey",
      "short_name": "New Survey",
      "description": "Create a new survey",
      "url": "/survey-configs/create",
      "icons": [
        {
          "src": "/images/shortcut-create.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Form Builder",
      "short_name": "Builder",
      "description": "Open the form builder",
      "url": "/form-builder",
      "icons": [
        {
          "src": "/images/shortcut-builder.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Analytics",
      "short_name": "Analytics",
      "description": "View survey analytics",
      "url": "/analytics",
      "icons": [
        {
          "src": "/images/shortcut-analytics.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "My Surveys",
      "short_name": "Surveys",
      "description": "View all surveys",
      "url": "/survey-configs",
      "icons": [
        {
          "src": "/images/shortcut-surveys.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-survey",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+survey",
      "url": "/survey/%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.surveyapp.android",
